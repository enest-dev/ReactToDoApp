    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "firebase-admin": "^8.12.1",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.3.12",
    "nodemailer": "^4.7.0",
    "nodemon": "^1.18.6",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/mongoose": "^5.3.1",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
