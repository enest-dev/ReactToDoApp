  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node --inspect=5858 ./src/server.ts",
    "dev": "nodemon ./dist/server.js",
    "prod": "npm run build && node ./dist/server.js",
