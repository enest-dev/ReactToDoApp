{
  "extends": "tslint-config-airbnb",
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts", "coverage/lcov-report/*.js"]
  },
  "rules": {
    "import-name": false,
    "align": [true, "parameters", "statements", "elements", "members"],
    "variable-name": [true, "allow-pascal-case"],
    "max-line-length": [true, { "limit": 125 }]
  }
}
